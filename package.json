{
  "name": "codex",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:all": "concurrently 'pnpm dev:frontend' 'pnpm dev:backend'",
    "dev:frontend": "vite",
    "dev:backend": "./scripts/start-backend-simple.sh",
    "build": "vite build",
    "build:strict": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "db:reset": "node reset-database.js --force",
    "db:seed": "vite-node src/backend/utils/seedTestData.ts",
    "db:migrate:local": "npx wrangler d1 execute codex_db --local --file=./migrations/0000_initial_schema.sql && npx wrangler d1 execute codex_db --local --file=./migrations/0001_add_user_deletion.sql && npx wrangler d1 execute codex_db --local --file=./migrations/0002_add_email_verification.sql",
    "db:migrate:dev": "npx wrangler d1 execute codex_db --file=./migrations/0000_initial_schema.sql && npx wrangler d1 execute codex_db --file=./migrations/0001_add_user_deletion.sql && npx wrangler d1 execute codex_db --file=./migrations/0002_add_email_verification.sql",
    "db:migrate:prod": "npx wrangler d1 execute codex-prod-db --file=./migrations/0000_initial_schema.sql && npx wrangler d1 execute codex-prod-db --file=./migrations/0001_add_user_deletion.sql && npx wrangler d1 execute codex-prod-db --file=./migrations/0002_add_email_verification.sql",
    "db:studio": "npx wrangler d1 execute codex_db --local --command=\"SELECT name FROM sqlite_master WHERE type='table';\"",
    "db:user": "npx wrangler d1 execute codex_db --local --command=\"SELECT * FROM users\"",
    "db:generate": "drizzle-kit generate",
    "seed-data": "node src/backend/utils/seedTestData.js",
    "deploy": "./scripts/deploy-prod.sh",
    "deploy:backend": "npx wrangler deploy --env development",
    "deploy:frontend": "npx wrangler pages deploy dist --project-name=codex",
    "check:dns": "./scripts/check-dns.sh",
    "verify:deployment": "./scripts/verify-deployment.sh",
    "test": "./tests/run-tests.sh",
    "test:api": "node tests/api/index.js",
    "test:unit": "node tests/unit/test.js",
    "test:e2e": "node tests/e2e/test-full.js",
    "test:registration": "./tests/run-registration-test.sh",
    "test:tailwind": "./tests/run-tailwind-test.sh",
    "test:auth": "node tests/auth/index.js",
    "test:oauth": "node tests/oauth/index.js"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.3",
    "@lucia-auth/adapter-sqlite": "^2.0",
    "@lucia-auth/oauth": "^2.0",
    "@picocss/pico": "^1.5.10",
    "better-sqlite3": "^11.9.1",
    "cors": "^2.8.5",
    "drizzle-kit": "^0.30.6",
    "drizzle-orm": "^0.41.0",
    "express": "^4.21.2",
    "hono": "^4.7.7",
    "hono-sessions": "^0.7.2",
    "jwt-decode": "^3.1.2",
    "lucia": "^2.0",
    "marked": "^9.1.0",
    "oslo": "^1.2.1",
    "preact": "^10.13.1",
    "preact-router": "^4.1.2",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250418.0",
    "@preact/preset-vite": "^2.5.0",
    "@types/marked": "^5.0.2",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "node-fetch": "^3.3.2",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "puppeteer": "^24.4.0",
    "tailwindcss": "3.3.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "vite": "^4.4.5",
    "vite-node": "^3.1.1",
    "wrangler": "^4.6.0"
  }
}
